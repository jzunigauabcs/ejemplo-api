{
    "version": 2,
    "builds": [
        {
            "src": "/**.js",
            "use": "@now/node-server@canary",
            "config": {
                "bundle": false
            }
        }
    ],
    "routes": [
        {
            "src": "/api/v1/(.*)",
            "dest": "/index.js"
        }
    ],
    "env": {
        "PORT": "3000",
        "DB_USER": "@db_user",
        "DB_PASS": "@db_pass",
        "DB_HOST": "@db_host",
        "DB_NAME": "@db_name",
        "DB_PORT": "5432"
    }
}
